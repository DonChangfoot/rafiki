{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --sort --concurrency=1 --stream",
    "clean": "yarn clean:artifacts && yarn clean:packages",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:packages": "lerna clean --yes",
    "publish": "lerna publish from-git",
    "test": "lerna run test --stream"
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/koa": "^2.0.49",
    "@types/koa-compose": "^3.2.4",
    "axios": "^0.19.0",
    "codecov": "^3.5.0",
    "debug": "^4.1.1",
    "ilp-packet": "^3.0.8",
    "jest": "^24.9.0",
    "koa": "^2.8.1",
    "lerna": "^3.16.4",
    "pino-debug": "^1.3.0",
    "pino-pretty": "^3.2.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.3"
  },
  "dependencies": {},
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true
  }
}
