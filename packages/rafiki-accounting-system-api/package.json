{
  "name": "@interledger/rafiki-accounting-system-api",
  "version": "0.1.0",
  "description": "Implementation of the ILP Settlement API",
  "keywords": [
    "rafiki",
    "interledger",
    "settlement"
  ],
  "author": "Interledger Team <info@interledger.org>",
  "homepage": "https://github.com/interledgerjs/rafiki#readme",
  "license": "Apache-2.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "rafiki": "build/start.js"
  },
  "files": [
    "build/**/*.json",
    "build/**/*.js",
    "build/**/*.js.map",
    "build/**/*.d.ts",
    "build/doc"
  ],
  "scripts": {
    "start": "npm run build && node ./build/start.js",
    "clean": "rm -Rf .nyc_output && rm -Rf coverage && rm -Rf build ",
    "build": "tsc -p src/tsconfig.build.json",
    "lint": "tslint --project .",
    "lintFix": "tslint --project . --fix",
    "test": "jest --bail --runInBand",
    "test:name": "jest --bail --runInBand --testNamePattern=",
    "test:list": "jest --listTests",
    "test:ci": "jest --bail --runInBand --coverage --ci",
    "doc": "typedoc --options typedoc.js src",
    "codecov": "codecov",
    "preversion": "npm run lint && npm test",
    "prepublishOnly": "rm -Rf ./build/test && npm run lint && npm test && npm run doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledgerjs/rafiki.git"
  },
  "bugs": {
    "url": "https://github.com/interledgerjs/rafiki/issues"
  },
  "dependencies": {
    "@interledger/rafiki-core": "^0.1.0",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-joi-router": "^5.2.2",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-joi-router": "^6.0.0"
  },
  "devDependencies": {
    "@types/koa-joi-router": "^5.2.2"
  }
}
